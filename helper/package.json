{
  "name": "remote-support-helper",
  "version": "1.0.13",
  "description": "Customer helper app for Remote Support",
  "author": "ServiceLC",
  "main": "src/main.js",
  "scripts": {
    "dev": "electron .",
    "build:win": "electron-builder --win nsis",
    "build:mac": "electron-builder --mac dmg",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "form-data": "^4.0.0",
    "robotjs": "^0.6.0",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "node-abi": "^4.26.0",
    "prebuild-install": "^7.1.3"
  },
  "build": {
    "productName": "Remote Support Helper",
    "appId": "com.servicelc.remotesupport.helper",
    "win": {
      "target": [
        "nsis"
      ],
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "npmRebuild": true
  }
}
