{
  "name": "remote-support-platform",
  "version": "1.0.1",
  "description": "Browser-based remote support: Electron helper + WebRTC screen share, mouse/keyboard control, file transfer. Self-hosted.",
  "main": "backend/server.js",
  "scripts": {
    "dev": "nodemon backend/server.js",
    "start": "node backend/server.js",
    "migrate": "node backend/scripts/migrate.js",
    "create-test-user": "node backend/scripts/create-test-technician.js",
    "build": "cd frontend && npm install && npm run build",
    "deploy": "bash deploy.sh",
    "test": "node -e \"console.log('OK'); process.exit(0);\" && node tests/smoke.js",
    "version:sync": "node scripts/sync-version.js",
    "version": "node scripts/sync-version.js"
  },
  "keywords": [
    "remote-support",
    "vnc",
    "remote-desktop",
    "websocket"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.7",
    "archiver": "^6.0.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.0",
    "redis": "^4.6.7",
    "socket.io": "^4.5.4",
    "uuid": "^9.0.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
